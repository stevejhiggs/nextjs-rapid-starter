{
  "name": "nextjs-skeleton",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "start": "yarn dev",
    "dev": "cross-env NODE_OPTIONS='--inspect' ./node_modules/.bin/next dev | pino-pretty",
    "lint": "next lint --fix",
    "lint:ci": "eslint '**/*.{js,jsx,ts,tsx}'",
    "test": "cross-env TZ=UTC NEXT_PUBLIC_LOGS_LEVEL=warn jest --watchAll",
    "test:ci": "cross-env TZ=UTC NEXT_PUBLIC_LOGS_LEVEL=warn jest --ci --coverage",
    "test:debug": "cross-env TZ=UTC node --inspect-brk node_modules/jest/bin/jest.js --runInBand --watch",
    "build": "cross-env NEXT_TELEMETRY_DISABLED=1 ./node_modules/.bin/next build",
    "production": "./node_modules/.bin/next start",
    "export": "./node_modules/.bin/next export",
    "analyze": "cross-env ANALYZE=true next build",
    "security:licenses": "license-checker --production --summary --failOn GPL",
    "security:packages": "audit-ci --report-type=full --critical=true",
    "prepare": "husky install",
    "pre-commit": "yarn lint-staged"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.2.4",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@next/bundle-analyzer": "^12.2.3",
    "formik": "^2.2.9",
    "framer-motion": "^6.5.1",
    "isomorphic-unfetch": "^3.1.0",
    "next": "12.2.3",
    "next-absolute-url": "^1.2.2",
    "next-connect": "^0.13.0",
    "next-i18next": "11.3.0",
    "pino": "^8.3.1",
    "pino-http": "^8.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.2.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@types/pino-http": "^5.8.1",
    "@types/react": "^18.0.15",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "audit-ci": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-flowtype": "^8",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.7.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "license-checker": "^25.0.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.44.2",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "printWidth": 150,
    "trailingComma": "none",
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{css,html,yaml,json,md}": [
      "prettier --write"
    ]
  },
  "[html]": {
    "editor.semanticHighlighting.enabled": true
  }
}
